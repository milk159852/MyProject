@model IEnumerable<NewProject.Models.Products>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink("Add New Product", "NewProduct", "Product", null, new {@class = "btn btn-primary" })

<table id="products" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ProductName</th>
            <th>Category</th>
            <th>Suppliers</th>
            <th>QuantityPerUnit</th>
            <th>UnitPrice</th>
            <th>UnitsInStock</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var product in Model)
    {

        <tbody>
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Categories.CategoryName</td>
                <td>@product.Suppliers.CompanyName</td>
                <td>@product.QuantityPerUnit</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock</td>
                <td>
                    @Html.ActionLink("Detail", "Detail", "Product", new { id = product.ProductID }, null) &nbsp
                    @Html.ActionLink("Edit", "Edit", "Product", new { id = product.ProductID}, null)
                    <button data-product-id="@product.ProductID" class="btn-link js-delete">Delete</button>
                </td>
            </tr>
        </tbody>
    }
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#products .js-delete").on("click", function () {
                if (confirm("Are you sure to delete it?")) {
                    $.ajax({
                        url: "/api/products/" + $(this).attr("data-product-id"),
                        method: "DELETE",
                        success: function(){
                            console.log("success");
                            $(this).parents("tr").remove();
                        }
                    });
                }
            });

        });
    </script>
}